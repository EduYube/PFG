<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_upm</item>
        <item name="colorPrimaryDark">@color/blue_upm</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_upm</item>
        <item name="colorPrimaryDark">@color/blue_upm</item>
        <item name="colorAccent">@color/colorAccent</item></style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@color/blue_upm</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">50dp</item>
    </style>

</resources>
